<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/linear_list_item_padding"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="@dimen/linear_list_item_padding">

    <ImageView
        android:id="@+id/widget_pet_photo"
        android:layout_width="@dimen/widget_image_measure"
        android:layout_height="@dimen/widget_image_measure"
        tools:src="@drawable/dog_photo" />

    <TextView
        android:layout_below="@id/widget_pet_photo"
        android:layout_centerHorizontal="true"
        android:id="@+id/widget_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        tools:text="Diesel" />

    <TextView
        android:layout_below="@id/widget_pet_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/widget_total_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        tools:text="2000" />


</RelativeLayout>