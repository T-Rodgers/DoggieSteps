<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>

    </style>

    <style name="AppTheme.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/secondaryLightColor</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabSelectedTextColor">@color/secondaryLightColor</item>
        <item name="tabIndicatorColor">@color/secondaryLightColor</item>
        <item name="tabRippleColor">@color/secondaryColor</item>
    </style>


</resources>